<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/entry_full"
    android:layout_width="400dp"
    android:layout_height="90dp">

    <ImageView
        android:id="@+id/icon_favoriteStar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="@string/desc_favorite_star"
        android:layout_gravity="center"
        android:padding="5dp" />

    <LinearLayout
        android:id="@+id/entry_route"
        android:layout_width="370dp"
        android:layout_height="90dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/entry_routeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/empty"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#4d4d4d"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/entry_startingPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/empty" />

        <TextView
            android:id="@+id/entry_routeDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/empty" />

        <TextView
            android:id="@+id/entry_routeStepsAndMiles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/empty" />
    </LinearLayout>
</LinearLayout>